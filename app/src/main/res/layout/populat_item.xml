<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_img"
            android:layout_width="300dp"
            android:layout_height="200dp"

            app:riv_corner_radius="14dp"

            android:src="@drawable/baseline_local_offer_24"/>
        <TextView
            android:id="@+id/pop_name"
            android:fontFamily="@font/poppins_light"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Popular Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pop_des"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_light"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/rating"
                android:layout_marginLeft="-5dp"/>
            <TextView
                android:id="@+id/pop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="5.0"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_light"/>
            <TextView
                android:id="@+id/pop_discound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Discound 20% off"
                android:textColor="@color/black"
                android:gravity="end"
                android:fontFamily="@font/poppins_light"/>
        </LinearLayout>

    </LinearLayout>
    

</androidx.cardview.widget.CardView>